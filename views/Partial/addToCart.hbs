<script>
    $('.add_cart_btn').on('click', function() {
      let key = $(this).val()
      let img = $(`#${key}`).attr('src');
      let productName = $(`#${key}_name`).attr('name');
      let price = $(`#price_${key}`).attr('value')
      console.log(productName);
      if (!localStorage.getItem(key)) {
        localStorage.setItem(key, '1 ' + img + ' ' + price + ' ' + productName);
      }
      else {
        localStorage.setItem(key, +localStorage.getItem(key).split(' ')[0] + 1 + ' ' + img + ' ' + price + ' ' + productName)
        
      }
      const cart = { ...localStorage };
      let products = ``
      let total_items = 0;
      for (item in cart) {
        total_items += +cart[item].split(' ')[0]
        products += item + '_' + cart[item].split(' ')[0] + ' '
      }
      document.querySelector('.fa-shopping-cart').textContent = `\t` + total_items;
      products = products.substring(0, products.length-1)
      
    })
</script>